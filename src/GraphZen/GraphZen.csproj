<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
    <Description>Code-first GraphQL framework for .NET</Description>
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Include="..\Shared\DictionaryContainerCodeGenerator.cs" Link="Internal\DictionaryContainerCodeGenerator.cs" />
    <Compile Include="..\Shared\DictionaryExtensions.cs" Link="DictionaryExtensions.cs" />
    <Compile Include="..\Shared\KeyValuePairExtensions.cs" Link="Internal\KeyValuePairExtensions.cs" />
  </ItemGroup>
  
  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
    <PackageReference Include="Microsoft.CSharp" Version="4.5.0" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'net461' ">
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>


  
  <ItemGroup>
    <ProjectReference Include="..\GraphZen.Abstractions\GraphZen.Abstractions.csproj" />
    <ProjectReference Include="..\GraphZen.Infrastructure\GraphZen.Infrastructure.csproj" />
    <ProjectReference Include="..\GraphZen.LanguageModel\GraphZen.LanguageModel.csproj" />
    <ProjectReference Include="..\GraphZen.TypeSystem\GraphZen.TypeSystem.csproj" />
  </ItemGroup>
</Project>